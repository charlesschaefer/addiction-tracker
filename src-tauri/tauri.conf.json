{
  "productName": "Addiction Tracker",
  "version": "0.0.11",
  "identifier": "com.addictiontracker",
  "build": {
    "beforeDevCommand": "npm run start -- --host localhost --public-host localhost",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/addiction-tracker/browser",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "/assets/splashscreen.html",
        "width": 500,
        "height": 750,
        "x": 200,
        "y": 200,
        "visible": false
      },
      {
        "title": "Addiction Tracker",
        "width": 500,
        "height": 750,
        "label": "main",
        "x": 200,
        "y": 200
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
