{
  "productName": "Addiction Tracker",
  "version": "0.0.5",
  "identifier": "com.addictiontracker",
  "build": {
    "beforeDevCommand": "npm run start -- --host $HOST --public-host $HOST",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/addiction-tracker/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Addiction Tracker",
        "width": 500,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
